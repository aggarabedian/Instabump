<!DOCTYPE html>
<html class="has-background-primary has-shadow">
	<!-- head -->
	<%- include( '../partials/head/_head.ejs', { page: 'Post' } ) %> 

  <body class=" has-shadow">
        <!-- Navbar Partial -->
        <%- include('../partials/navbar/_navbar', { routes } ) %>
    <!-- https://bulma.io/documentation/components/navbar/#fixed-navbar -->
    
    <section class="hero is-small has-shadow">
      <div class="column">
        <h1 class="title">Post Show Page</h1>
      </div>
    </section> 
  
    <div class="container is-max-widescreen p-5  has-shadow">
      <article class="media">
        <figure class="media-left">
          <p class="image is-328x328">
            <img src="<%= post.image %>" alt="Post img" />
          </p>
        </figure>
        <div class="media-content">
          <div class="content">
            <h3>Caption: <%= post.caption %></h3>
            <small>Bump Count: <%= post.bumpCount.length %></small>
                  <div>
                      <form method='POST' action="/posts/<%= post._id%>/updateBumper">
                          <input class="has-background-primary-dark"type='submit' value='Bump'>
                      </form>
                  </div>
          </div>
           <% if (user.id == post.user._id) { %>
              <button class="button is-danger toggle-modal"><a href="/posts/<%= post._id%>/edit">Edit</a></button>
           <% } else { %>

           <% } %>
          
        </div>
      </article>
    </div>
  
</body>
</html>