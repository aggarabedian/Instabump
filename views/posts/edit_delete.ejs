<!DOCTYPE html>
<html>

  <!-- Head partial -->
  <%- include('../partials/head/_head', { page: 'Edit Product' }) %> 

  <body class="has-navbar-fixed-top">
    
    <!-- Navbar Partial -->
    <%- include('../partials/navbar/_navbar', { routes } ) %> 

    <section class="hero is-medium has-background-light">
      <div class="hero-body">
        <h1 class="title">Edit Product page</h1>
      </div>
    </section>

    <section class="container is-max-widescreen p-5">
      <form action="/products/<%= product.id %>?_method=PUT" method="POST">
        <% if (typeof error !== 'undefined') { %>
          <article class="message is-danger">
            <div class="message-header">
              <p>Danger</p>
            </div>
            <div class="message-body">
              <%= error.message %> 
            </div>
          </article>
        <% } %>

        <div class="field">
          <label for="product-name" class="label">Product Name</label>

          <div class="control">
            <input 
              type="text" 
              class="input" 
              placeholder="Super Cool Product" 
              name="name"
              value="<%= product.name %>" 
              id="product-name">
          </div>
        </div>

         <div class="field">
          <label for="product-price" class="label">Product Price</label>
          <div class="control">
            <input 
            id="product-price"
              class="input"  
              type="number"
              min="0" 
              placeholder="32"
              value="<%= product.price %>"  
              name="price" />
          </div>
        </div>

        <div class="field">
          <label for="product-image" class="label">Product Image</label>
          <div class="control">
            <input
              id="product-image"
              class="input"
              type="text"
              placeholder="http://"
              value="<%= product.image %>" 
              name="image"
            />
          </div>
        </div>

        <div class="field is-grouped">
          <div class="control">
            <a class="button is-danger" href="/products/<%= product.id %>">X</a>
          </div>
          <div class="control">
            <button class="button is-primary">Edit Product</button>
          </div>
        </div>

      </form>
    </section>
  </body>
</html>
