<!DOCTYPE html>    
<html lang="en">
	<!-- head -->
	<%- include( '../partials/head/_head.ejs', { page: 'Users' } ) %> 
<body>
    <!-- Navbar Partial -->
    <%- include('../partials/navbar/_navbar', { routes } ) %>

    <div class="columns body-columns">
        <div class="column is-half is-offset-one-quarter">
        <% posts.forEach(post => { %>
            <div class="card">
                <div class="header">
                    <div class="media">
                        <div class="media-left">
                            <figure class="image is-48x48">
                                <img src="https://via.placeholder.com/150" alt="Placeholder image">
                            </figure>
                        </div>
                        <div class="media-content">
                            <p class="subtitle is-6"><%= user.fullName %></p>
                            <a href="/users/<%= post.user._id %>"> <%= post.user %></a>
                        </div>
                    </div>
                </div>
                <div class="card-image">
                    <figure class="image is-4by3">
                        <img src="<%= post.image %>" alt="Placeholder image">
                    </figure>
                </div>
                <div class="card-content">
                    <div class="content">
                        <p>
                            <strong><%= post.bumpCount.length %> Bumps</strong>
                        </p>
                        <a href="/posts/<%= post._id %>">
                            <%= post.caption %>
                        </a>
                        
                        <br>
                        <time datetime="2018-1-1"><%= new Date(post.createdAt).toLocaleString() %></time>
                    </div>
                </div>
            </div><br>
        <% }) %>
        </div>
    </div>
</body>
</html>
