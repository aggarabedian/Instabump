<!DOCTYPE html>    
<html lang="en">
	<!-- head -->
	<%- include( '../partials/head/_head.ejs', { page: 'Users' } ) %> 
<body>
  
<form action="/register" method="POST">
  <div class="container is-max-desktop ">
    <br><br>
    <div class="field">
      <label class="label">Full Name:</label>
      <div class="control">
        <input class="input" type="text" name="fullName" required>
      </div>
    </div>

    <div class="field">
      <label class="label">Email:</label>
      <div class="control has-icons-left has-icons-right">
        <input class="input is-danger" type="email" name="email" required>
      </div>
    </div>

    <div class="field">
      <label class="label">Password:</label>
      <div class="control has-icons-left has-icons-right">
        <input class="input is-danger" type="password" name="password" required>
      </div>
    </div>

    <div class="field">
      <label class="label">Username:</label>
      <div class="control has-icons-left has-icons-right">
        <input class="input" type="text"  name="username" required>
      </div>
    </div>

    <div class="field">
      <label class="label">Profile URL:</label>
      <div class="control has-icons-left has-icons-right">
        <input class="input" type="text" name="avatar" required>
      </div>
    </div>

    <div class="field is-grouped">
      <div class="control">
        <button class="button is-link">Sign up</button>
      </div>
      <div class="control">
        <button class="button is-link is-light">Cancel</button>
      </div>
    </div>
  </div>
</form>
</body>

</html>